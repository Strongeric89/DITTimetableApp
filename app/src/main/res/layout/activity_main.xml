<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.andrid.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:weightSum="5">


    <Button
        android:id="@+id/goToTimetable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/turq"
        android:textColor="@color/white"
        android:text="Timetable"

        android:textSize="30sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/white" />

    <Button
        android:id="@+id/goToMyNotes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/turq"
        android:text="Create Note"
        android:textColor="@color/white"
        android:textSize="30sp"

        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/white" />

    <Button
        android:id="@+id/goToViewNotes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/turq"
        android:text="View Notes"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/white" />

    <Button
        android:id="@+id/goToClasses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/turq"
        android:text="View Classes"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/white" />

    <Button
        android:id="@+id/goToWebCourses"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/turq"
        android:text="Web Courses"
        android:textColor="@color/white"
        android:onClick="onurlClick"
        android:textSize="30sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/white" />

    <Button
        android:id="@+id/goToAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/created"
        android:textColor="@color/white"
        android:textSize="10sp" />




</LinearLayout>