<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    >


    <Button
        android:id="@+id/click_url"
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:layout_above="@+id/click_main"
        android:background="@color/turq"
        android:onClick="onurlClick"
        android:padding="0dp"
        android:text="View Instructional Video"
        android:textColor="@color/white"

        />

    <ListView

        android:id="@+id/task_list_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:textStyle="bold"


        />




    <TextView

        android:id="@+id/creator"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey"
        android:gravity="center"
        android:layout_below="@+id/naviagtion_view"
        android:text="@string/created"
        android:textColor="@color/white"
        android:textSize="10sp" />


</LinearLayout>